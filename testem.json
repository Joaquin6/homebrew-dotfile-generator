{
  "launchers": {
    "Node": {
      "command": "mocha tests/**/*.js"
    }
  },
  "launch_in_dev": ["Node"],
  "framework": "mocha",
  "before_tests": "coffee -c tests/**/*.coffee",
  "src_files": [
    "tests/**/*.coffee"
  ],
  "serve_files": [
    "app.js",
    "tests/**/*.js"
  ],
  "on_exit": "rm tests/**/*.js"
}
